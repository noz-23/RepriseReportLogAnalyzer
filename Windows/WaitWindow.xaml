<Window
    x:Class="RepriseReportLogAnalyzer.Windows.WaitWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:RepriseReportLogAnalyzer.Windows"
    mc:Ignorable="d"
    Title="Please Wait" Height="100" Width="200"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize" 
    WindowStyle="ToolWindow" 
    Background="LightGreen"
    Loaded="_loaded" Topmost="True" 
    >
    <Grid>
        <TextBlock
            Text="Please Wait" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
