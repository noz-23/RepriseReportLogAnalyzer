<UserControl
    x:Class="RepriseReportLogAnalyzer.Controls.ResultControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"   
    xmlns:local="clr-namespace:RepriseReportLogAnalyzer.Controls"
    xmlns:manager="clr-namespace:RepriseReportLogAnalyzer.Managers"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label
            x:Name="_label"
            Grid.Column="0" Grid.Row="0"
            Content="Select:"
         />
        <Calendar
            x:Name="_calendar"
            Grid.Column="0" Grid.Row="1"
            SelectedDatesChanged="_calendarSelected"
            MouseDoubleClick="_mouseDoubleClick"
            DisplayDateStart="{Binding StartDate,Source={x:Static manager:AnalysisManager.Instance},Mode=OneWay}"
            DisplayDateEnd="{Binding EndDate,Source={x:Static manager:AnalysisManager.Instance},Mode=OneWay}" 
        />
        <DataGrid
            Grid.Column="1" Grid.Row="0"
            ItemsSource="{Binding ListResultProduct,Source={x:Static manager:AnalysisManager.Instance},Mode=OneWay}"
            AutoGenerateColumns="False"
            CanUserAddRows="false"
            Margin="0,0,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2"
            >
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="Auto"
                    IsReadOnly="True"
                    Binding="{Binding Name}"
                    Header="Product"
                />
                <DataGridTextColumn
                    Width="Auto"
                    IsReadOnly="True"
                    Binding="{Binding Count}"
                    Header="Count"
                />
                <DataGridTextColumn
                    Width="Auto"
                    IsReadOnly="True"
                    Binding="{Binding Max}"
                    Header="Max"
                />
            </DataGrid.Columns>
        </DataGrid>
        <ComboBox
            x:Name="_comboBox"
            Grid.Column="2" Grid.Row="0"
            >
        </ComboBox>
        <DataGrid 
            Grid.Column="2" Grid.Row="1"
            ItemsSource="{Binding ListResultGroup,Source={x:Static manager:AnalysisManager.Instance},Mode=OneWay}"
            AutoGenerateColumns="False"
            CanUserAddRows="false"
            >
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Group"
                    Width="*"
                    IsReadOnly="True"
                    Binding="{Binding Name}"
                />
                <DataGridTextColumn
                    Header="Duration"
                    Width="*"
                    IsReadOnly="True"
                    Binding="{Binding Duration}"
                />
            </DataGrid.Columns>
        </DataGrid>
        <ScottPlot:WpfPlot
            x:Name="_scottPlot"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
            Margin="0,0,0,0" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3"
        />

    </Grid>
</UserControl>
